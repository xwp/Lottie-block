{
	"extends": ["plugin:@wordpress/eslint-plugin/recommended-with-formatting"],
	"env": {
		"browser": true,
		"es6": true
	},
	"rules": {
		"@wordpress/no-global-event-listener": "off"
	},
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"requireConfigFile": false,
		"babelOptions": {
			"presets": ["@babel/preset-react"]
		 }
	}
}
